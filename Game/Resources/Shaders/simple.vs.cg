struct InputData
{
	in varying float3 position	: ATTR0;
	in varying float2 uv		: ATTR1;
	in varying float3 normal	: ATTR2;
};

struct VertexToFragment
{
	float4 position : POSITION;
	float2 uv : TEXCOORD0;
};

VertexToFragment main( InputData IN, uniform float4x4 modelViewProjection )
{	
	VertexToFragment OUT;
	
	OUT.position = mul( modelViewProjection, float4( IN.position, 1.0 ) );
	OUT.uv = IN.uv;
	
	return OUT;	
}